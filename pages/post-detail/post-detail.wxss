.article-image {
  width: 100%;
  height: 460rpx;
}

.article-info {
  padding: 28rpx 20rpx;
  box-sizing: border-box;
}
.author-time {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.avatar-image {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
}
.author-publish {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.author-publish text {
  color: #666666;
}
.publish-time {
  margin-top: 10rpx;
  font-size: 22rpx;
}
.publish-time text {
  font-weight: 600;
}

.article-title {
  margin: 20rpx 0;
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}


.tool {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.collect-share {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.collect-share image {
  width: 90rpx;
  height: 90rpx;
}
.share-img {
  margin-left: 30rpx;
}
.horizon {
  width: 100%;
  height: 2rpx;
  background-color: #d6d6d6;
  position: absolute; 
  z-index: -999;
}

.article-content {
  letter-spacing: 2rpx;
}

/* 音乐按钮 */
.music-image {
  width: 82rpx;
  height: 90rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
