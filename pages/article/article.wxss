/* 轮播图 */
swiper {
  width: 100%;
  height: 460rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

/* 文章列表 */
.article-container {
  padding: 28rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border-bottom: 8rpx solid #dedede;
}
.author-avatar-like {
  margin: 0 0 20rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.avatar-date {
  display: flex;
  justify-content: center;
  align-items: center;
}
.author-avatar {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
}
.name-date {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
}
.article-date {
  margin-top: 10rpx;
  font-size: 21rpx;
}
.name-date .author-name {
  color: #222222;
}

.article-title {
  font-size: 34rpx;
  font-weight: 800;
  color: #333;
}
.article-image {
  width: 100%;
  height: 340rpx;
  margin: 20rpx 0;
}
.article-content {
  color: #272727;
  font-size: 28rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.article-like {
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.article-like-num {
  margin-left: 10rpx;
  font-size: 26rpx;
}
.article-scan {
  margin-left: 30rpx;
}